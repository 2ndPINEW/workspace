{
  "name": "TabSessionManager",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "タブセッション管理",
  "background": {
    "service_worker": "index.js"
  },
  "permissions": [
    "tabGroups",
    "tabs",
    "notifications",
    "unlimitedStorage",
    "storage"
  ],
  "commands": {
    "switchMode": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "モード切り替える"
    },
    "tabMove": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "タブをフリーセッションに移動する"
    }
  },
  "action": {
    "default_icon": {
      "512": "icon.png"
    },
    "default_popup": "popup.html"
  }
}